<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_billing_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:visibility="visible"
        android:layout_marginTop="60sp"
        android:id="@+id/image_logo_id"
        android:src="@drawable/get_started_logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/lin_title_tag_id"
            android:layout_weight="0.3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#eef20e0e"
                android:text="Forget Password"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#ee000000"
                android:layout_marginTop="10sp"
                android:text="@string/forget_pass"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linearLayout_btnID"
            android:layout_below="@+id/tv_rajjke_khawa_id"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_weight="0.3">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_forget_password_email_id"
                android:layout_width="match_parent"
                app:hintEnabled="true"
                android:textColorHint="#ee262826"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvinput_forget_password_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    app:hintEnabled="true"
                    android:drawablePadding="10sp"
                    android:drawableLeft="@drawable/password_hover"
                    android:inputType="textPassword"
                    android:textColor="#ee000000"
                    android:paddingRight="20sp"
                    android:textColorHint="#ee212521"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.3">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget"
                android:textColor="#eeffffff"
                style="@style/btn_login_style"
                android:visibility="visible"
                android:id="@+id/btn_forget_password_id"/>

        </LinearLayout>





    </LinearLayout>



</LinearLayout>
