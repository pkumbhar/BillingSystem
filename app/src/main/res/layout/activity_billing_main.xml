<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_billing_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:visibility="visible"
        android:layout_marginTop="60sp"
        android:id="@+id/image_logo_id"
        android:src="@drawable/get_started_logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/lin_title_tag_id"
            android:layout_weight="0.3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rajjke_khawa_id"
                android:src="@drawable/rajkekhawa"
                android:visibility="gone"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linearLayout_btnID"
            android:layout_below="@+id/tv_rajjke_khawa_id"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_weight="0.3">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_username_id"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:hintEnabled="true"
                android:textColorHint="#ee262826"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_user_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User name"
                    app:hintEnabled="true"
                    android:drawablePadding="10sp"
                    android:textColor="#ee000000"
                    android:drawableLeft="@drawable/username_hover"
                    android:textColorHint="#ee212521"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                app:hintEnabled="true"
                android:textColorHint="#ee262826"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_password_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    app:hintEnabled="true"
                    android:maxLines="1"
                    android:drawablePadding="10sp"
                    android:drawableLeft="@drawable/password_hover"
                    android:inputType="textPassword"
                    android:textColor="#ee000000"
                    android:paddingRight="20sp"
                    android:textColorHint="#ee212521"/>

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Forget Password?"
                    android:layout_marginTop="8sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:id="@+id/tv_reset_password_id"
                    android:textColor="#FFA61F24"
                    android:gravity="left|center"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="set Server id"
                    android:layout_marginTop="8sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_server_setting_id"
                    android:textColor="#FFA61F24"
                    android:gravity="right|center"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="0.3">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Started"

                style="@style/btn_login_style"
                android:id="@+id/btn_start_orderId"
                />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
