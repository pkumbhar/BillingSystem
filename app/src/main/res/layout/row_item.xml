<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="8sp"
    android:layout_marginLeft="8sp"
    android:weightSum="1">

    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:paddingLeft="10sp"
        android:id="@+id/tvItemNameId"
        android:paddingTop="5sp"
        android:layout_weight="0.4"/>
    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="price"
        android:gravity="center"
        android:drawableLeft="@drawable/indian_rupee"
        android:id="@+id/tv_row_price_id"
        android:textSize="22sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <ImageView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:src="@drawable/addsign"
            android:id="@+id/img_row_add_sign_id"
            android:layout_weight="0.4"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="price"
            android:gravity="center"
            android:textSize="22sp"
            android:id="@+id/tv_row_quantiry_id_tx"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:src="@drawable/minussign"
            android:id="@+id/img_row_minussign_id"
            android:layout_weight="0.4"/>
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#ee818481">

    </View>
</LinearLayout>