<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_menu_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:gravity="center"
            android:id="@+id/lin_menu_list_id">
        </LinearLayout>
    </HorizontalScrollView>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_forget_password_email_id"
        android:layout_width="match_parent"
        android:textColorHint="#ee262826"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tvinput_forget_password_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:drawableRight="@drawable/search_three_six"
            android:inputType="textPassword"
            android:textColor="#ee000000"
            android:paddingRight="20sp"
            android:textColorHint="#ee212521"/>

    </android.support.design.widget.TextInputLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#ee818481"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="0dp"
        android:weightSum="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="ORDER NAME"
            style="@style/text_roe_title"
            android:layout_weight="0.3"
            />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:paddingLeft="20sp"
            android:layout_weight="0.3"
            style="@style/text_roe_title"
            />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="QUANTITY"
            style="@style/text_roe_title"
            android:layout_weight="0.3"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#ee818481"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <view
            android:id="@+id/recycler_vehicleMarket_id"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true"
            android:background="#f7f7f7"/>

    </LinearLayout>






</LinearLayout>
